<%= form_for @onthemarket, url: new_user_portfolio_onthemarket_path do |f| %>
  <div class="form-group">
    <%= f.label :buying, "Purchasing or Selling" %>
    <%= f.select :buying, ['Puchasing', 'Selling'], {}, class: 'form-control' %>
  </div>
  <div class = "form-group">
    <%= f.label :stocks_on_market %>
    <%= f.select :stocks_on_market, [Stock.find(1).symbol => 100], {}, class: 'form-control' %>
  </div>
  <div class = "form-group">
    <%= f.label :least_possible %>
    <%= f.select :stocks_on_market, [Stock.find(1).symbol => 100], {}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit "Propose your transaction", class: 'btn btn-primary' %>
  </div>
<% end %>